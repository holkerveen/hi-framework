{% extends "base.html.twig" %}

{% block content %}
    <h1>Users</h1>
    
    <p><a class="btn btn-primary" href='/users/create'>Create user</a></p>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" href='/users/{{ user.id }}/edit'>Edit</a>
                        <a class="btn btn-outline-danger" href='/users/{{ user.id }}/confirm-delete'>Delete</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}