root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx,json,yaml,yml,xml}]
indent_style = space
indent_size = 2

[*.{html,twig}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[composer.json]
indent_size = 4
