#!/usr/bin/env php
<?php

if (php_sapi_name() !== 'cli') {
    exit;
}

require __DIR__ . '/../vendor/autoload.php';

use Hi\Console\ScaffoldCommand;

$command = $argv[1] ?? null;

switch ($command) {
    case 'install':
        $scaffolder = new ScaffoldCommand();
        $scaffolder->install();
        break;

    case 'serve':
        $scaffolder = new ScaffoldCommand();
        $scaffolder->serve();
        break;

    default:
        echo "Hi Framework\n\n";
        echo "Available commands:\n";
        echo "  install  - Scaffold a new project with controllers, templates, and config\n";
        echo "  serve    - Start the built-in PHP development server\n";
        exit(1);
}
